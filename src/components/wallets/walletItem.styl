.walletItem
  position relative

  &__grid
    display grid
    grid-template-columns minmax(10px, max-content) 1fr minmax(10px, max-content)
    grid-template-rows repeat(2, minmax(0, max-content))
    grid-column-gap $m9

    @media $media-laptop
      grid-column-gap $m8

  &__amount
    grid-column 3 / 4
    grid-row 1 / 3
    align-self center
    justify-self end

  &__icon
    grid-column 1 / 2
    grid-row 1 / 3
    align-self center

  &__line
    grid-column 2 / 4
    grid-row -1 / -1
    margin-bottom $m6
    padding-bottom $m6
    border-bottom 1px solid var(--color-line-1)

    ^[0]:last-child &
      display none

  &__name
    grid-column 2 / 3
    grid-row 1 / 3
    align-self center
    color var(--c-text-main-dim)

    @media $media-laptop
      font-size 15px


.walletItemWidget
  overflow hidden
  display flex
  flex-flow column nowrap
  align-items flex-end
  padding $m7
  color var(--color-icon-color)
  white-space nowrap

  &._space-between
    flex-flow row nowrap
    align-items center
    justify-content space-between
