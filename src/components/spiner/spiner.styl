.spinner
  display flex
  align-items center
  height 100%
  text-align center

  &._hidden
    visibility hidden

  &__b
    display inline-block
    width 18px
    height 18px
    margin-right $m5
    border-radius 100%
    background-color var(--color-white)
    animation sk-bouncedelay 1.3s infinite ease-in-out both
    opacity .8

    ^[0]._dark &
      opacity 1
      background-color var(--btn-red-background)

    &._b1
      animation-delay -0.32s

    &._b2
      animation-delay -0.16s

    &._b3
      margin-right 0

@keyframes sk-bouncedelay
  0%, 80%, 100%
    transform: scale(.2)
  40%
    transform: scale(1)
