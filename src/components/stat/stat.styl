.stat
  &:first-child
    margin-top (- $m8)

  &__group
    margin $m8 0
    margin-bottom $mb1
    border-bottom 1px solid var(--group-border)

    &:last-child
      margin-bottom 0
      padding-bottom 0

  &__header
    typo-header()
    font-size 22px
    padding 0 $m8
    margin-bottom $m8
    color #ff6929

  &__chart
    display block
    flex 0 0 auto
    width 100%
    height 100%
    border-bottom 1px solid var(--group-border)

  &__content
    position relative
    padding $m7 $m8
    padding-right $mn2
    background var(--trns-list-bg)

    &__arrow
      position absolute
      right $m7
      top calcMinus(50%, $m5)
      transform translate(0, -50%)
      color var(--c-text-main-dim)
      font-size 22px
      opacity .8

  &__trns
    padding-bottom $m8

  &__item
    max-width 212px
    display flex
    align-items center
    justify-content space-between
    margin-bottom $m7
    padding-bottom $m7
    border-bottom 1px solid var(--color-line-1)

    &:last-child
      margin-bottom 0
      padding-bottom 0
      border-bottom 0

.trnsListHistory__btn
  margin $m7
