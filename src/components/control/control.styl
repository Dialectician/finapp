.controlsList
  margin-top $m9 * 1.5

.control
  display flex
  align-items center
  padding 0 $m9
  width 100%
  margin-top -1px

  &:first-child
    margin-top (- $m9)

  &:active
    background var(--bg-active-1)

  &__icon
    width 50px
    font-size $font-size-icon
    color var(--c-text-main-dim)

  &__text
    flex-grow 1
    padding $m9 0
    border-bottom 1px solid var(--color-line-1)

    ^[0]:active &
      border-bottom-color transparent

    ^[0]:last-child &
      border-bottom 0
